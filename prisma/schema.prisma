// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Game {
  id              String   @id // BGG game ID
  name            String
  yearPublished   Int?

  // Import status
  isActive        Boolean  @default(false)
  lastScraped     DateTime?

  // Scraped data (populated after scraping)
  image           String?
  thumbnail       String?
  description     String?
  minPlayers      Int?
  maxPlayers      Int?
  minPlaytime     Int?
  maxPlaytime     Int?
  rating          Float?
  minAge          Int?
  categories      String?  // JSON string array
  mechanics       String?  // JSON string array
  isExpansion     Boolean  @default(false)

  // All available images from BGG gallery
  availableImages String?  // JSON string array

  // User preferences (image curation)
  selectedThumbnail  String?
  componentImages    String?  // JSON string array

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SyncLog {
  id         String   @id @default(cuid())
  username   String
  syncedAt   DateTime @default(now())
  gamesFound Int
  status     String   // 'success', 'failed'
}

model Settings {
  id             String  @id @default("default")
  collectionName String?
  bggUsername    String?

  // Sync scheduling
  syncSchedule        String   @default("manual") // "manual", "daily", "weekly", "monthly"
  autoScrapeNewGames  Boolean  @default(false)
  lastScheduledSync   DateTime?

  updatedAt      DateTime @updatedAt
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         String    @default("user") // "user" or "admin"
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScrapeJob {
  id          String    @id @default(cuid())
  gameId      String
  gameName    String
  status      String    @default("pending") // pending, processing, completed, failed
  error       String?
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status])
  @@index([gameId])
}

// Collaborative Pick Session Models
model PickSession {
  id            String   @id @default(cuid())
  code          String   @unique  // 6-char shareable code
  hostName      String
  status        String   @default("active")  // active, completed, cancelled

  // Stored filters so guests get same game set
  filtersJson   String   // JSON: {players, kidsPlaying, time, categories, includeExpansions}
  gameIdsJson   String   // JSON array of pre-filtered game IDs

  createdAt     DateTime @default(now())
  completedAt   DateTime?

  players       PickSessionPlayer[]
  votes         PickSessionVote[]

  @@index([code])
  @@index([status])
}

model PickSessionPlayer {
  id          String   @id @default(cuid())
  sessionId   String
  name        String
  isHost      Boolean  @default(false)
  status      String   @default("picking")  // picking, done
  progress    Int      @default(0)  // current card index
  joinedAt    DateTime @default(now())

  session     PickSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  votes       PickSessionVote[]

  @@index([sessionId])
}

model PickSessionVote {
  id          String   @id @default(cuid())
  sessionId   String
  playerId    String
  gameId      String
  decision    String   // "like", "skip", "pick"
  createdAt   DateTime @default(now())

  session     PickSession       @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player      PickSessionPlayer @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([sessionId, playerId, gameId])
  @@index([sessionId])
}
