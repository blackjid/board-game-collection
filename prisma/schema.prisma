// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Game {
  id              String   @id // BGG game ID
  name            String
  yearPublished   Int?

  // Scraping status
  lastScraped     DateTime?

  // Scraped data (populated after scraping)
  image           String?
  thumbnail       String?
  description     String?
  minPlayers      Int?
  maxPlayers      Int?
  minPlaytime     Int?
  maxPlaytime     Int?
  rating          Float?
  minAge          Int?
  categories      String?  // JSON string array
  mechanics       String?  // JSON string array
  isExpansion     Boolean  @default(false)

  // All available images from BGG gallery
  availableImages String?  // JSON string array

  // User preferences (image curation)
  selectedThumbnail  String?
  componentImages    String?  // JSON string array

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Collections this game belongs to
  collections     CollectionGame[]
}

model SyncLog {
  id         String   @id @default(cuid())
  username   String
  syncedAt   DateTime @default(now())
  gamesFound Int
  status     String   // 'success', 'failed'
}

model Settings {
  id             String   @id @default("default")
  updatedAt      DateTime @updatedAt
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         String    @default("user") // "user" or "admin"
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScrapeJob {
  id          String    @id @default(cuid())
  gameId      String
  gameName    String
  status      String    @default("pending") // pending, processing, completed, failed
  error       String?
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status])
  @@index([gameId])
}

// Pick Session Models - stores both solo and collaborative sessions
model PickSession {
  id            String   @id @default(cuid())
  code          String   @unique  // 6-char shareable code (generated for all sessions)
  type          String   @default("collaborative")  // "solo" | "collaborative"
  hostName      String   // For collab: host name, for solo: player name
  status        String   @default("active")  // active, completed, cancelled

  // Stored filters so guests get same game set (and for session history)
  filtersJson   String   // JSON: {players, kidsPlaying, time, categories, includeExpansions}
  gameIdsJson   String   // JSON array of pre-filtered game IDs

  // Final results
  finalResultsJson String?  // JSON: vote results in final order (for collaborative)
  winnerGameId     String?  // The final picked game (quick access, avoids parsing JSON)

  createdAt     DateTime @default(now())
  completedAt   DateTime?

  players       PickSessionPlayer[]
  votes         PickSessionVote[]

  @@index([code])
  @@index([status])
  @@index([type])
  @@index([createdAt])  // For browsing session history
  @@index([winnerGameId])
}

model PickSessionPlayer {
  id          String   @id @default(cuid())
  sessionId   String
  name        String
  isHost      Boolean  @default(false)
  status      String   @default("picking")  // picking, done
  progress    Int      @default(0)  // current card index
  joinedAt    DateTime @default(now())

  session     PickSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  votes       PickSessionVote[]

  @@index([sessionId])
}

model PickSessionVote {
  id          String   @id @default(cuid())
  sessionId   String
  playerId    String
  gameId      String
  decision    String   // "like", "skip", "pick"
  createdAt   DateTime @default(now())

  session     PickSession       @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player      PickSessionPlayer @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([sessionId, playerId, gameId])
  @@index([sessionId])
}

// Collections - unified abstraction for both BGG-synced and manual collections
model Collection {
  id          String   @id @default(cuid())
  name        String
  description String?

  // Collection type and designation
  type        String   @default("manual")  // "bgg_sync" | "manual"
  isPrimary   Boolean  @default(false)     // The main/default collection

  // BGG sync settings (only used when type = "bgg_sync")
  bggUsername        String?
  syncSchedule       String   @default("manual")  // "manual" | "daily" | "weekly"
  autoScrapeNewGames Boolean  @default(false)
  lastSyncedAt       DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  games       CollectionGame[]

  @@index([name])
  @@index([type])
  @@index([isPrimary])
}

model CollectionGame {
  id           String   @id @default(cuid())
  collectionId String
  gameId       String
  addedBy      String   @default("manual")  // "sync" | "manual"
  addedAt      DateTime @default(now())

  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  game         Game       @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([collectionId, gameId])
  @@index([collectionId])
  @@index([gameId])
}
