// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Game {
  id              String   @id // BGG game ID
  name            String
  yearPublished   Int?

  // Scraping status
  lastScraped     DateTime?

  // Scraped data (populated after scraping)
  image           String?
  thumbnail       String?
  description     String?
  minPlayers      Int?
  maxPlayers      Int?
  minPlaytime     Int?
  maxPlaytime     Int?
  rating          Float?
  minAge          Int?
  categories      String?  // JSON string array
  mechanics       String?  // JSON string array
  isExpansion     Boolean  @default(false)

  // All available images from BGG gallery
  availableImages String?  // JSON string array

  // User preferences (image curation)
  selectedThumbnail  String?
  componentImages    String?  // JSON string array

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Collections this game belongs to
  collections     CollectionGame[]
  plays           GamePlay[]

  // Game relationships (expansions, requirements)
  relationshipsFrom  GameRelationship[] @relation("GameRelationshipsFrom")
  relationshipsTo    GameRelationship[] @relation("GameRelationshipsTo")
}

// Game relationships - links games via "expands" or "requires" relationships
// - "expands": fromGame is an expansion that can be played with toGame (base game)
// - "requires": fromGame requires toGame to play (could be base game or another expansion)
model GameRelationship {
  id          String   @id @default(cuid())
  fromGameId  String   // The expansion/dependent game
  toGameId    String   // The base/required game
  type        String   // "expands" | "requires"

  fromGame    Game     @relation("GameRelationshipsFrom", fields: [fromGameId], references: [id], onDelete: Cascade)
  toGame      Game     @relation("GameRelationshipsTo", fields: [toGameId], references: [id], onDelete: Cascade)

  @@unique([fromGameId, toGameId, type])
  @@index([fromGameId])
  @@index([toGameId])
  @@index([type])
}

model SyncLog {
  id         String   @id @default(cuid())
  username   String
  syncedAt   DateTime @default(now())
  gamesFound Int
  status     String   // 'success', 'failed'
}

model Settings {
  id             String   @id @default("default")
  updatedAt      DateTime @updatedAt
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         String    @default("user") // "user" or "admin"
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
  loggedPlays  GamePlay[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScrapeJob {
  id          String    @id @default(cuid())
  gameId      String
  gameName    String
  status      String    @default("pending") // pending, processing, completed, failed
  error       String?
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status])
  @@index([gameId])
}

// Pick Session Models - stores both solo and collaborative sessions
model PickSession {
  id            String   @id @default(cuid())
  code          String   @unique  // 6-char shareable code (generated for all sessions)
  type          String   @default("collaborative")  // "solo" | "collaborative"
  hostName      String   // For collab: host name, for solo: player name
  status        String   @default("active")  // active, completed, cancelled

  // Stored filters so guests get same game set (and for session history)
  filtersJson   String   // JSON: {players, kidsPlaying, time, categories, includeExpansions}
  gameIdsJson   String   // JSON array of pre-filtered game IDs

  // Final results
  finalResultsJson String?  // JSON: vote results in final order (for collaborative)
  winnerGameId     String?  // The final picked game (quick access, avoids parsing JSON)

  createdAt     DateTime @default(now())
  completedAt   DateTime?

  players       PickSessionPlayer[]
  votes         PickSessionVote[]

  @@index([code])
  @@index([status])
  @@index([type])
  @@index([createdAt])  // For browsing session history
  @@index([winnerGameId])
}

model PickSessionPlayer {
  id          String   @id @default(cuid())
  sessionId   String
  name        String
  isHost      Boolean  @default(false)
  status      String   @default("picking")  // picking, done
  progress    Int      @default(0)  // current card index
  joinedAt    DateTime @default(now())

  session     PickSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  votes       PickSessionVote[]

  @@index([sessionId])
}

model PickSessionVote {
  id          String   @id @default(cuid())
  sessionId   String
  playerId    String
  gameId      String
  decision    String   // "like", "skip", "pick"
  createdAt   DateTime @default(now())

  session     PickSession       @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player      PickSessionPlayer @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([sessionId, playerId, gameId])
  @@index([sessionId])
}

// Collections - unified abstraction for both BGG-synced and manual collections
model Collection {
  id          String   @id @default(cuid())
  name        String
  slug        String?  @unique              // URL-friendly identifier (e.g., "party-games")
  description String?

  // Collection type and designation
  type        String   @default("manual")  // "bgg_sync" | "manual" | "automatic"
  isPrimary   Boolean  @default(false)     // The main/default collection
  isPublic    Boolean  @default(false)     // Whether the collection is public (viewable without auth)

  // Share token for "anyone with link" access
  shareToken  String?  @unique             // Random token for sharing private collections

  // BGG sync settings (only used when type = "bgg_sync")
  bggUsername        String?
  syncSchedule       String   @default("manual")  // "manual" | "daily" | "weekly"
  autoScrapeNewGames Boolean  @default(false)
  lastSyncedAt       DateTime?

  // Automatic list configuration (only used when type = "automatic")
  autoRuleType    String?   // "top_played" | "recently_played" | "highest_rated" etc.
  autoRuleConfig  String?   // JSON: { limit: 10, ... } - rule-specific settings

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  games       CollectionGame[]

  @@index([name])
  @@index([type])
  @@index([isPrimary])
  @@index([isPublic])
  @@index([shareToken])
  @@index([autoRuleType])
}

model CollectionGame {
  id           String   @id @default(cuid())
  collectionId String
  gameId       String
  addedBy      String   @default("manual")  // "sync" | "manual"
  addedAt      DateTime @default(now())

  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  game         Game       @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([collectionId, gameId])
  @@index([collectionId])
  @@index([gameId])
}

// Player - tracks game participants with additional details
model Player {
  id          String   @id @default(cuid())
  displayName String   // Primary name shown (required)
  firstName   String?  // Optional additional info
  lastName    String?  // Optional additional info
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  gamePlays   GamePlayPlayer[]

  @@index([displayName])
}

// Saved Location - reusable locations with GPS coordinates
model SavedLocation {
  id        String   @id @default(cuid())
  name      String   // Display name (e.g., "Home", "Game Store")
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gamePlays GamePlay[]

  @@index([name])
}

// Game Play Tracking - records of actual game plays
model GamePlay {
  id              String   @id @default(cuid())
  gameId          String
  loggedById      String
  playedAt        DateTime @default(now())
  location        String?  // Display name (backward compatible, or manual entry)
  savedLocationId String?  // Optional link to saved location with coords
  duration        Int?     // minutes
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  game          Game           @relation(fields: [gameId], references: [id], onDelete: Cascade)
  loggedBy      User           @relation(fields: [loggedById], references: [id], onDelete: Cascade)
  savedLocation SavedLocation? @relation(fields: [savedLocationId], references: [id], onDelete: SetNull)
  players       GamePlayPlayer[]

  @@index([gameId])
  @@index([loggedById])
  @@index([playedAt])
  @@index([savedLocationId])
}

model GamePlayPlayer {
  id        String   @id @default(cuid())
  playId    String
  name      String
  playerId  String?  // Optional link to Player entity
  isWinner  Boolean  @default(false)
  createdAt DateTime @default(now())

  play      GamePlay @relation(fields: [playId], references: [id], onDelete: Cascade)
  player    Player?  @relation(fields: [playerId], references: [id], onDelete: SetNull)

  @@index([playId])
  @@index([playerId])
}
